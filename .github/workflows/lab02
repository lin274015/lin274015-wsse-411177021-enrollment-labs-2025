name: Validate OpenAPI

on:
  pull_request:
    branches: [ main ]

jobs:
  validate:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      
      - name: Validate OpenAPI definition
        # 這裡假設你使用 spectral 或相關工具來檢查你的 swagger 檔案
        run: |
          echo "正在驗證 API 定義..."
          # 如果你有安裝工具，可以在此執行，例如：npx @stoplight/spectral-cli lint your-api-spec.yaml
          exit 0
